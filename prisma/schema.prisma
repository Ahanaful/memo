generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  CAREGIVER
  PATIENT
}

model User {
  id        String   @id @default(cuid())
  auth0Id   String   @unique
  email     String   @unique
  role      Role     @default(CAREGIVER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  caregiverLinks CaregiverPatient[] @relation("CaregiverLinks")
  patientLinks   CaregiverPatient[] @relation("PatientLinks")
  invites        Invite[]           @relation("CaregiverInvites")
  memories       Memory[]
}

model CaregiverPatient {
  id          String @id @default(cuid())
  caregiver   User   @relation("CaregiverLinks", fields: [caregiverId], references: [id])
  caregiverId String
  patient     User   @relation("PatientLinks", fields: [patientId], references: [id])
  patientId   String
  createdAt   DateTime @default(now())

  @@unique([caregiverId, patientId])
}

model Invite {
  id          String   @id @default(cuid())
  token       String   @unique
  caregiverId String
  caregiver   User     @relation("CaregiverInvites", fields: [caregiverId], references: [id])
  used        Boolean  @default(false)
  expiresAt   DateTime
  createdAt   DateTime @default(now())
}

model Memory {
  id         String   @id @default(cuid())
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  title      String
  personName String?
  eventName  String?
  placeName  String?
  date       DateTime?
  imageUrl   String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
